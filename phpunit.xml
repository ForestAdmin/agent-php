<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="Test Suite">
            <directory suffix="Test.php">./tests</directory>
        </testsuite>
    </testsuites>
    <coverage processUncoveredFiles="true">
        <include>
            <directory suffix=".php">./packages/Agent/src</directory>
            <directory suffix=".php">./packages/BaseDatasource/src</directory>
            <directory suffix=".php">./packages/DatasourceCustomizer/src</directory>
            <directory suffix=".php">./packages/DatasourceDoctrine/src</directory>
            <directory suffix=".php">./packages/DatasourceEloquent/src</directory>
            <directory suffix=".php">./packages/DatasourceToolkit/src</directory>
        </include>
    </coverage>
</phpunit>
